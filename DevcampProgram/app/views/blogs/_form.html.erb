<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <%= blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Gabriel Wilkins Portfolio", sticky: false, time: 500) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "Blog Title" %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: "Blog Content" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>